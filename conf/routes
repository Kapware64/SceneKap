# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                             controllers.PlaceController.index
GET     /getall                       controllers.PlaceController.getAll
GET     /nearby/:lat/:long            controllers.PlaceController.nearby(lat, long)
GET     /details/:pid/:name           controllers.PlaceController.details(pid, name)

POST    /website/:pid/:url            controllers.PlaceController.changeWebsite(pid, url)
POST    /photo/:pid/:url              controllers.PlaceController.changePhoto(pid, url)
POST    /addComment/:pid/:text        controllers.PlaceController.addComment(pid, text)
POST    /upvoteComment/:pid/:cid      controllers.PlaceController.upvoteComment(pid, cid)
POST    /downvoteComment/:pid/:cid    controllers.PlaceController.downvoteComment(pid, cid)

#change into getDetails, which also returns comments
#post for a pid's comments (new comment and upvote/downvote)
#post for pic
#post for website
#post for summary

POST    /nearby                     controllers.PlaceController.nearbyBtn
POST    /details                    controllers.PlaceController.detailsBtn
POST    /changeUrl                  controllers.PlaceController.urlBtn
POST    /changePhoto                controllers.PlaceController.photoBtn
POST    /addComment                 controllers.PlaceController.addCommentBtn
POST    /upvoteComment              controllers.PlaceController.upvoteCommentBtn
POST    /downvoteComment            controllers.PlaceController.downvoteCommentBtn

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

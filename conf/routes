# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.UserController.index
POST    /reset                      controllers.UserController.resetAll
POST    /graphit                    controllers.UserController.graphIt
POST    /inputjson                  controllers.UserController.inputJSON
POST    /person                     controllers.UserController.addPerson
GET     /persons                    controllers.UserController.getPersons
POST    /descpersons                controllers.UserController.descPersons

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
